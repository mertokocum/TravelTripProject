@model TravelTripProject.Models.Classes.Blog

@{
    ViewBag.Title = "GetBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Blog</h2>
<br/>
@using (Html.BeginForm("GetBlog", "Admin", FormMethod.Post))
{
	@Html.LabelFor(x => x.ID)
	@Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
	<br/>
	@*<input name="Title" type="text" required></input>  böyle de yapılabilir*@
	@Html.LabelFor(x => x.Title)
	@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
	<br/>
	@Html.LabelFor(x => x.Date)
	@Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
	<br/>
	@Html.LabelFor(x => x.BlogImage)
	@Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
	<br/>
	@Html.LabelFor(x => x.Description)
	@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
	<br/>
	<button class="btn btn-primary">OK</button>
}


@using TravelTripProject.Models.Classes
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
        <a href="/blog/blogdetail/@x.ID">
            <div class="bot-img">
                <img src="@x.BlogImage" style="width:120px; height:80px;" alt="" />
            </div>
            <div class="bot-desc1">
                <p>@x.Description.Substring(0, 80)...</p>
            </div>
            <div class="clear"></div>
        </a>
            }
    </div>